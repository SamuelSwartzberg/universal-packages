#!/usr/bin/env bash

subcommand="$1"
shift

case "$subcommand" in
"test-existence")
  brew help
  ;;
"list")
  brew list --cask
  ;;
"list-version")
  brew list --cask --versions | cut -d "," -f 1 | tr -s " " "@"
  ;;
"which")
  brew --prefix --cask "$1"
  ;;
"install")
  brew install --cask $*
  ;;
"remove")
  brew uninstall --cask $*
  ;;
"upgrade")
  brew upgrade --cask $*
  ;;
"upgrade-all")
  brew upgrade --cask
  ;;
"install-self")
  /usr/bin/env bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  ;;
esac
