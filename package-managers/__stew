#!/usr/bin/env bash

subcommand="$1"
shift

function get_package_identifier() {
  echo "${1/https:\/\/github.com\//}" | sed 's/.git//'
}
function get_likely_binary_name() {
  basename "$1" ".git"
}

package_id="$(get_package_identifier "$1")"
shift

case "$subcommand" in
"test-existence")
  stew
  ;;
"list")
  stew list
  ;;
"list-version")
  stew list --tags
  ;;
"which")
  ls "/Users/sam/.local/share/stew/pkg/$package_id/"*
  ;;
"install")
  stew install "$package_id" "$1"
  ;;
"remove")
  stew uninstall "$package_id" "$1"
  ;;
"upgrade")
  stew upgrade "$package_id" "$1"
  ;;
"upgrade-all")
  stew upgrade --all
  ;;
"package-manager")
  echo "stew"
  ;;
"package-manager-version")
  stew --version | cut -d " " -f 2
  ;;
"which-self")
  which stew
  ;;
"install-self")
  brew install marwanhawari/tap/stew
  ;;
"help")
  stew help
  ;;
esac
